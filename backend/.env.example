# ===========================================
# Vaccine Verification API - Configuration
# ===========================================

# Stellar Blockchain Configuration
# Get your keys from: https://laboratory.stellar.org/#account-creator?network=test
STELLAR_SECRET_KEY=your_stellar_secret_key_here
STELLAR_PUBLIC_KEY=your_stellar_public_key_here
STELLAR_NETWORK_URL=https://horizon-testnet.stellar.org

# Smart Contract Configuration
# Deploy your contract first and get the contract ID
# Example: CA7QYNF7SOWQ3GLR2BGMZEHXAVIRZA4KVWLTJJFC7MGXUA74P7UJVSGZ
VACCINE_CONTRACT_ID=your_deployed_contract_id_here

# Contract Admin Configuration
# This should be the same account that initialized the contract
# If not set, it will use STELLAR_SECRET_KEY
CONTRACT_ADMIN_SECRET_KEY=your_contract_admin_secret_key_here

# Database Configuration (optional - using in-memory for now)
DB_URL=sqlite://./vaccine.db

# Server Configuration
PORT=3000
